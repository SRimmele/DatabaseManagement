<div class="row row-cols-1 row-cols-md-4 g-4 px-5">

    <div class = "col">
        <div class = "card text-center text-dark bg-light">
            <div class = "card-header">
                <h3 class = "card-title"> Add A New Friend Here! </h3>
            </div>
            <div class = "card-body">
                <ul class = 'list-group list-group-flush'>
                    <li class = 'list-group-item text-center'> <b>Top Friend Songs To Listen To:</b> </li>
                    <li class = 'list-group-item text-center'> 1. You're My Best Friend </li>
                    <li class = 'list-group-item text-center'> 2. You've Got A Friend in Me </li>
                    <li class = 'list-group-item text-center'> 3. That's What Friends Are For </li>
                    <li class = 'list-group-item text-center'> 4. Wannabe </li>
                    <li class = 'list-group-item text-center'> 5. Best Friend </li>
                </ul>
            </div>
            <div class = 'card-footer text-center'>
                <button class = "btn btn-secondary" type = "submit" onclick = "location.href = '/friendsAdd'"> + Add Friends </button>
            </div>
        </div>
    </div>

    {{#if friends}}
        {{#each friends}}
            <div class='col'>
                <div class='card text-center text-dark bg-light'>
                    <div class = 'card-header'>
                        <h3 class ='card-title'> {{this.username}} </h3>
                    </div>
                    <div class = 'card-body'>
                        <ul class = 'list-group list-group-flush'>
                            <li class = 'list-group-item text-center'> <b>Top Five Recent Searches:</b> </li>
                            <li class = 'list-group-item text-center'> 1. Don't Stop Believin' </li>
                            <li class = 'list-group-item text-center'> 2. Sweet Caroline </li>
                            <li class = 'list-group-item text-center'> 3. Smells Like Teen Spirit </li>
                            <li class = 'list-group-item text-center'> 4. Kung Fu Fighting </li>
                            <li class = 'list-group-item text-center'> 5. Sundown </li>
                        </ul>
                    </div>
                    <div class = 'card-footer text-center'>
                        <button class="btn btn-secondary delete-row-btn" data-id=""> - Delete Friend </button>
                    </div>
                </div>
            </div>
        {{/each}}
    {{else}}
        <div class = "col">
            <div class= "card text-center text-dark bg-light">
                <div class = "card-header">
                    <h3 ="card-title"> Sorry! </h3>
                </div>
                <div class = 'card-body'> 
                    Looks like you don't have any friends yet!
                </div>
            </div>
        </div>
    {{/if}}

</div>

<script src = "friends.js"></script>