<div class="row row-cols-1 row-cols-md-4 g-4 px-5">

    <div class = "col">
        <div class = "card text-center text-dark bg-light">
            <div class = "card-header">
                <h3 class = "card-title"> Add a new friend! </h3>
            </div>
            <div class = "card-body">
                <button class = "btn btn-secondary" type = "submit" onclick = "location.href = '/friendsAdd'"> + </button>
            </div>
        </div>
    </div>

    <card id = "card"></card>   
    <ul>
        {{#each friends}}
            <li>{{this.username}} - {{this.email}}</li>
        {{/each}}
    </ul>
</div>

<script src = "friends.js"></script>